<h1>ログイン</h1>

<%= notice %>
<%= alert %>

<%= form_for(:session, url: sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="aciton">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<p><%= link_to "ユーザー登録へ", new_user_path %></p>
